
@{
    ViewBag.Title = "Detail";
}

<h2>Edit - @ViewBag.singlePro.FullName</h2>
<form method="post">
    <div class="form-group">
        <label>FullName</label>
        <input class="form-control" type="text" name="FullName" value="@ViewBag.singlePro.FullName" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="text" name="Email" value="@ViewBag.singlePro.Email" />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input class="form-control" type="text" name="Phone" value="@ViewBag.singlePro.Phone" />
    </div>
    <div class="form-group">
        <input class="btn btn-warning" type="submit"  value="Edit" />
    </div>
</form>

